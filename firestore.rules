rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /invoices/{invoiceId} {
      // Allow users to create, read, update, and delete their own invoices
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      // Allow users to create invoices
      allow create: if request.auth != null;
    }
    match /userSettings/{userId} {
      // Allow users to read, write, and create their own settings
      allow read, write, create: if request.auth != null && request.auth.uid == userId;
    }
  }
}
