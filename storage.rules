rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to upload logos to their own folder.
    match /logos/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to upload QR codes to their own folder.
    match /qrcodes/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}